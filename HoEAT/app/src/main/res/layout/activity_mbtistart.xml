<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MbtiStartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="34dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/login_logo" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="312dp"
                android:layout_height="231dp"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/mbti_main_text"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000">
            </ImageView>

            <ImageView
                android:layout_width="234.9dp"
                android:layout_height="394.2dp"
                android:layout_marginLeft="125dp"
                android:src="@drawable/mbti_illust"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000">
            </ImageView>

            <ImageView
                android:layout_width="310dp"
                android:layout_height="27dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/mbti_who_are"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000">
            </ImageView>


            <Button
                android:id="@+id/MbtiStartButton"
                android:layout_width="427dp"
                android:layout_height="65dp"
                android:backgroundTint="#2be0b3"
                android:layout_marginTop="24dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="63dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text="시작하기">
            </Button>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>